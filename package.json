{
  "name": "francescoschwarz.com",
  "version": "0.0.0",
  "description": "The personal website of Francesco Schwarz",
  "author": "Francesco Schwarz",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/isellsoap/francescoschwarz.com#readme",
  "repository": {
    "type": "git",
    "url": "git://github.com/isellsoap/francescoschwarz.com.git"
  },
  "bugs": {
    "url": "https://github.com/isellsoap/francescoschwarz.com/issues"
  },
  "engines": {
    "node": ">=10.15.0 <11.0.0",
    "yarn": ">=1.16.0 <2.0.0"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "lint:markdown": "markdownlint ./src/_content/**/*.md",
    "lint:social": "alex .",
    "lint:prose": "proselintjs ./src/_content/**/*.md",
    "lint": "npm-run-all --parallel lint:markdown lint:social lint:prose",
    "images:sizes": "mkdirp ./dist/images/main && batch-image-resizer -i ./src/images/main/ -o ./dist/images/main/ -s \"[320, 640, 960, 1280, 1600, 1920]\"",
    "images:minify": "imageoptim './dist/images/main/'",
    "images": "yarn images:sizes && yarn images:minify",
    "watch:assets": "webpack --config=config/webpack.ts -d --watch --progress --mode=development",
    "serve:files": "ELEVENTY_ENV=development eleventy --config config/eleventy.ts --serve",
    "start": "yarn clean && yarn images && npm-run-all --parallel watch:assets serve:files",
    "build:assets": "webpack --config=config/webpack.ts -p --progress --mode=production",
    "build:files": "ELEVENTY_ENV=production eleventy --config config/eleventy.ts",
    "build": "yarn lint && yarn clean && yarn images && yarn build:assets && yarn build:files"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "markdownlint",
      "alex",
      "proselintjs"
    ]
  },
  "dependencies": {
    "@11ty/eleventy": "^0.8.3",
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "@types/webpack": "^4.4.32",
    "alex": "^7.0.0",
    "autoprefixer": "^9.3.1",
    "batch-image-resizer": "^0.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^2.0.0",
    "file-loader": "^3.0.0",
    "glob": "^7.1.4",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.3.0",
    "imageoptim-cli": "^2.3.5",
    "lazysizes": "^5.1.0",
    "lint-staged": "^8.1.7",
    "markdown-it": "^8.4.2",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^5.2.3",
    "markdown-it-attrs": "^2.4.1",
    "markdown-it-deflist": "^2.0.3",
    "markdown-it-emph": "^1.1.0",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-table-of-contents": "^0.4.3",
    "markdownlint": "^0.14.2",
    "markdownlint-cli": "^0.16.0",
    "mini-css-extract-plugin": "^0.7.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.1",
    "proselint": "^0.1.7",
    "purgecss-webpack-plugin": "^1.5.0",
    "rimraf": "^2.6.3",
    "tailwindcss": "^1.0.2",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.1",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2"
  }
}
